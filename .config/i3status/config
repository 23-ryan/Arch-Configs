general {
	interval = 1
	separator="|"
		colors = true
		color_good="#FFFFFF"
		color_degraded="#ffd75f"
		color_bad="#d75f5f"
}

order += "ethernet enp0s3"
order += "memory"
order += "cpu_usage"
order += "volume master"
order += "battery 0"
order += "tztime local"

tztime local {
	format = " %Y-%m-%d | %I:%M "
}

cpu_usage {
	format = " CPU:%usage "
}

load {
	format = " %5min 5min "
}

